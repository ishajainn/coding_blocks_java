package super_150;
import java.util.*;
public class decimal_to_octal {
	public static void main(String[] args){
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		int num=0;
		while(n>8) {
			int nes=n%8;
			num=num*10+nes;
			n=n/8;
			
		}
		num=num*10+n;
		int num1=0;
		while(num>0) {
			int nes1=num%10;
			num1=num1*10+nes1;
			num=num/10;
		}
		System.out.println(num1);}

}
